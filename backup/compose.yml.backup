version: '3.8'

services:
  freepbx:
    image: tiredofit/freepbx:latest
    container_name: freepbx
    restart: unless-stopped
    environment:
      - DB_EMBEDDED=FALSE
      - DB_HOST=db
      - DB_NAME=asterisk
      - DB_USER=asterisk
      - DB_PASS=asteriskpass
      - RTP_START=10000
      - RTP_FINISH=20000
      - ADMIN_USER=osmo
      - ADMIN_PASS=osmoosmo
    ports:
      - "8080:80"
    volumes:
      - freepbx_data:/data
    networks:
      - pbxnet
    depends_on:
      db:
        condition: service_healthy

  db:
    image: mariadb:10.5
    container_name: freepbx-db
    restart: unless-stopped
    environment:
      - MYSQL_ROOT_PASSWORD=rootpass
      - MYSQL_DATABASE=asterisk
      - MYSQL_USER=asterisk
      - MYSQL_PASSWORD=asteriskpass
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - pbxnet
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "asterisk", "-pasteriskpass"]
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 20s

volumes:
  freepbx_data:
  db_data:

networks:
  pbxnet:
    driver: bridge
